<style>
       p.afterpay-paragraph {
          margin-top:  1% !important;
       }
       p.afterpay-paragraph > img {
          width: 100px !important;
          height: 21px !important;
       }
</style>

<script>
$(function() {
  $('#ChangeToggle').click(function() {
    $('#navbar-hamburger').toggleClass('block');
    $('#navbar-close').toggleClass('hidden');
  });
});
</script>

<style>
.navbar-toggle { max-height: 40px; position: absolute; top: -7px; left: 20px; }
.header-mobile #showLeftPush { background: #fff!important }
#navbar-close { position: absolute; z-index: 99; left: 750%; top: 80px; }
</style>
<script>
if (afterpay_product && afterpay_product.price == 0) {
 $('p.afterpay-paragraph').css({visibility: 'hidden', maxHeight: "0"});
}
</script>
</body>
</html>
