<div class="home-sliders container">
	{% if section.blocks.size > 0 %}
		<div class="swiper-container home-swiper">
			<div class="swiper-wrapper">
				{% for block in section.blocks %}
					<div class="swiper-slide">
						<div class="home-sliders__header">
							<a class="home-slide-title" href="{{ block.title_url }}">
								{{ block.settings.title }}
							</a>
							<div class="home-sliders__header-arrow">
								<div class="swiper-button-prev"></div>
								<div class="swiper-button-next"></div>
							</div>
						</div>
						<div class="home-slide-image">
							<a href="{{ block.settings.button_url }}"><img src="{{ block.settings.image | img_url: '1000x' }}"></a>
						</div>
						<div class="home-slide-content">
							<div class="home-slide-description">
								{{ block.settings.description }}
							</div>
							<a href="{{ block.settings.button_url }}">
								{{ block.settings.button_text }}
							</a>
						</div>
					</div>
				{% endfor %}
			</div>
			{%comment%}<div class="swiper-pagination"></div>{%endcomment%}
			
		</div>
	{% endif %}
</div>
<style type="text/css">
	.home-sliders {
		margin-bottom: 70px;
	}
	.home-slide-title {
		font-size: 24px;
		margin-bottom: 25px;
		text-transform: uppercase;
		display: block;
	}
	.home-slide-image img {
		width: 100%;
		height: 500px;
		object-fit: cover;
	}
	.home-slide-content {
		margin-top: 20px;
	}
	.home-slide-description {
		text-transform: uppercase;
		font-size: 12px;
		line-height: 22px;
		margin-bottom: 20px;
	}
	.home-slide-content a {
		text-decoration: underline;
		text-transform: uppercase;
	}
	.home-sliders__header a.home-slide-title {
		margin-bottom: unset;
	}
	.home-sliders__header-arrow	{
		margin-top: -18px;
	}
	.home-sliders__header .home-sliders__header-arrow {
        float: right;
        text-transform: uppercase;
        font-size: 18px;
        display: flex;
    }

    @media (max-width:  768px) {
        .home-sliders__header .home-sliders__header-arrow {
            float: left;
        }

        .home-sliders__header a.home-slide-title {
            display: block;
            float: none;
        }

		.home-sliders__header-arrow {
			margin-top: 5px;
		}
    }
    .home-sliders__header-arrow .swiper-button-next, .home-sliders__header-arrow .swiper-button-prev {
        color: #000;
        width: 30px;
        height: 30px;
        position: relative;
        top: 16px;
        left: 0;
    }
	.home-sliders__header-arrow .swiper-button-next::after, .home-sliders__header-arrow .swiper-button-prev::after {
        font-size: 20px;
    } 
</style>
<script type="text/javascript">
	var swiper = new Swiper(".home-swiper", {
        loop: true,
		navigation: {
			nextEl: '.swiper-button-next',
			prevEl: '.swiper-button-prev',
		},
        breakpoints: {
        	768: {
        		slidesPerView: 1,
        	},
        	1024: {
        		slidesPerView: 1,
        	}
        },
        pagination: {
          el: ".swiper-pagination",
          clickable: true,
        },
	});
</script>
{% schema %}
{
	"name": "Home Slider",
	"blocks": [
		{
			"name": "Slider",
			"type": "slider",
			"settings": [
				{
					"type": "text",
					"id": "title",
					"label": "Title"
				},
				{
					"type": "url",
					"id": "title_url",
					"label": "Title Link"
				},
				{
					"type": "image_picker",
					"id": "image",
					"label": "Slider Image"
				},
				{
					"type": "textarea",
					"id": "description",
					"label": "Description"
				},
				{
					"type": "text",
					"id": "button_text",
					"label": "Button Text"
				},
				{
					"type": "url",
					"id": "button_url",
					"label": "Button Link"
				}
			]
		}
	]
}
{% endschema %}