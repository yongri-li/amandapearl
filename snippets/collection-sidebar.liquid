      text-align: center;
      outline: none;
      line-height: 2;
      text-transform: uppercase;
      font-weight: 400;
      transition: 0.4s;
      width: 100%;
      font-size: 12px;
      display: inline-block;
  }


  button.accordion.active, button.accordion:hover {
      background-color: #fff;
  }


  button.accordion.active::after {
    content: " -";
  }

  button.accordion::after {
    content: " +";
  }

  div.panel {
      padding: 0 0px;
      display: none;
      border: none;
      line-height: 2!important;;
      background-color: #fff;
      text-align: center;
      width: 100%!important;
      text-transform: uppercase;
      float:center!important;
      font-size: 12px;
  }

  div.panel.show {
      display: block;
  }
}

