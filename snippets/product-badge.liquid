<div class="product-badge">
	{% if product.tags contains 'bestseller' %}
		<h3 class="product-badge__title">BEST SELLER</h3>
	{% endif %}

	{% if product.available %}
		{% assign low_quantity_alert = settings.product_low_quantity %}

		{% assign total_stock = 0 %}

		{% for variant in product.variants %}
			{% assign total_stock =  total_stock | plus: variant.inventory_quantity %}
		{% endfor %}
		
		{% assign total_stock = total_stock | plus: 0 %}
		{% if total_stock < low_quantity_alert %}
			<h3 class="product-badge__title">Only a few left</h3>
		{% endif %}
	{% endif %}

	{% if product.tags contains 'sale' %}
		<h3 class="product-badge__title">Sale</h3>
	{% endif %}

	{% if product.tags contains 'secret sale' %}
		<h3 class="product-badge__title">Secret Sale</h3>
	{% endif %}

	{% if product.tags contains 'Sample sale' %}
		<h3 class="product-badge__title">Sample Sale</h3>
	{% endif %}

	{% if product.tags contains 'limited edition' %}
		<h3 class="product-badge__title">Limited Edition</h3>
	{% endif %}

	{% if product.tags contains 'one of a kind' %}
		<h3 class="product-badge__title">One of a kind</h3>
	{% endif %}
</div>