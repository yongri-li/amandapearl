<div class="col-xs-12  collection-sidebar">
  {% comment %}
  Refined tags
  {% endcomment %}
<div class="row">

{% comment %}
<div class="col-xs-12 col-sm-3">
<div style="border: 1px solid #eee">
<button class="accordion2">SHOP FOR</button>
<div class="panel" style="border: 1px solid #eee; padding: 10px;">
<div style="border: 0;">
  {% for link in linklists.shop.links %}
    <button class="accordion" style="text-align: left!important">{{ link.title }}</button>
    <div class="panel" style="border-color: #fff; text-align: left!important">
      {% capture mm_vend %}{{ link.title | handleize }}{% endcapture %}
      {% for link in linklists.[mm_vend].links %}
        <a href="{{ link.url }}">{{ link.title }}</a><br>
      {% endfor %}
    </div>
  {% endfor %}
</div>
</div>
</div>
</div>
{% endcomment %}

<div class="col-xs-12 col-sm-12 collection-mm-filters">
  <div>
  <button class="accordion2">FILTER / SORT</button>
<div class="panel2">
<div class="row">
  <div class="col-xs-12 col-sm-2 sidebar-custom sidebar-tag">
    <div class="widget-title">
      <h3 style="font-size: 12px;">
        Shop For
      </h3>
    </div>
    {% for link in linklists.shop.links %}
      <button class="accordion" style="text-align: left!important">{{ link.title }}</button>
      <div class="panel" style="border-color: #fff; text-align: left!important">
        {% capture mm_vend %}{{ link.title | handleize }}{% endcapture %}
        {% for link in linklists.[mm_vend].links %}
          <a href="{{ link.url }}">{{ link.title }}</a><br>
        {% endfor %}
      </div>
    {% endfor %}
  </div>
  <div class="col-xs-12 col-sm-9">
  {% include 'collection-sidebar-shop-by-blocks' %}
  </div>
  <div class="col-xs-12 col-sm-1 sidebar-custom sidebar-tag">
    <div class="widget-title">
      <h3 style="font-size: 12px;">
        Sort By
      </h3>
    </div>
    <div class="widget sidebar-links">
      {% include 'collection-sort' %}
    </div>
  </div>
</div>
</div>
</div>
</div>

{% comment %}
  {% if settings.display_sidebar_categories %}
  <div class="col-xs-12 col-sm-3">
    <div style="border: 1px solid #eee;">
  <button class="accordion2">SORT BY</button>
    <div class="panel2" style="border: 1px solid #eee; padding-top: 10px;">
  <div class="widget sidebar-links">
    {% include 'collection-sort' %}
  </div>
</div>
</div>
</div>
  {% endif %}
{% endcomment %}


</div>
</div>






<style>
  @media (min-width: 767px) {
  button.accordion {
      background-color: #fff;
      color: #000;
      cursor: pointer;
      padding: 0px;
      width: 100%;
